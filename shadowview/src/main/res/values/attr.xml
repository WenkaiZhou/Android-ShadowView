<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ShadowView">
        <attr name="sv_text" format="string" />
        <attr name="sv_textColor" format="color" />
        <attr name="sv_shadowColor" format="color" />
        <attr name="sv_textSize" format="dimension" />
        <attr name="sv_shadowSize" format="dimension" />
        <attr name="sv_direction">
            <flag name="left" value="0x00" />
            <flag name="top" value = "0x01" />
            <flag name="right" value = "0x02" />
            <flag name="bottom" value = "0x04" />
            <flag name="left_top" value = "0x08" />
            <flag name="right_top" value = "0x10" />
            <flag name="right_bottom" value = "0x20" />
            <flag name="left_bottom" value = "0x40" />
        </attr>

    </declare-styleable>

</resources>